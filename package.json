{
  "name": "songbook",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "docker": "npm i && docker-run",
    "tmux": "npm i && in-tmux"
  },
  "nodeVersion": "10.15.0",
  "configurations": {
    "install": {
      "cmd": [
        "bash",
        "-c",
        "cd backend && npm i && cd ../frontend && npm i"
      ]
    },
    "backend-build": {
      "dir": "backend",
      "cmd": "npm run build --"
    },
    "backend-build-watch": {
      "dir": "backend",
      "cmd": "npm run build -- --watch"
    },
    "backend-watch": {
      "dir": "backend",
      "cmd": "npm run watch --",
      "port": 3001
    },
    "frontend": {
      "dir": "frontend",
      "cmd": "npm run start --",
      "port": 3000
    },
    "tmux": {
      "dir": ".",
      "cmd": "npm run tmux --"
    },
    "shell": {
      "dir": ".",
      "cmd": "/bin/bash"
    }
  },
  "tmux": {
    "devel": {
      "before-all": [
        "npm run docker -- install",
        "npm run docker -- backend-build"
      ],
      "panes": [
        {
          "name": "BE run",
          "dir": "backend",
          "cmd": "npm run docker -- backend-watch"
        },
        {
          "name": "BE build",
          "dir": "backend",
          "cmd": "npm run docker -- backend-build-watch --skip-initial-build"
        },
        {
          "name": "FE",
          "dir": "frotend",
          "cmd": "npm run docker -- frontend"
        }
      ]
    },
    "devel-lerna": {
      "before-all": [
        [
          "bash",
          "-c",
          "cd backend && npm run build"
        ]
      ],
      "panes": [
        {
          "name": "BE run",
          "dir": "backend",
          "cmd": "npm run watch --"
        },
        {
          "name": "BE build",
          "dir": "backend",
          "cmd": "npm run build -- --watch --skip-initial-build"
        },
        {
          "name": "FE",
          "dir": "frontend",
          "cmd": "npm run start --"
        },
        {
          "name": "FE SSR",
          "dir": "frontend",
          "cmd": "npm run start-ssr --"
        }
      ]
    }
  },
  "dependencies": {
    "@s-isabella/docker-start": "0.0.4",
    "@types/react-router-dom": "^4.3.1"
  }
}
